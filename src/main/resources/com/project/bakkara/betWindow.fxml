        <items>
          <MenuItem fx:id="SelfBet" mnemonicParsing="false" text="On win" />
          <MenuItem fx:id="OppBet" mnemonicParsing="false" text="On Lose" />
            <MenuItem fx:id="DrawBet" mnemonicParsing="false" text="On Draw" />
        </items>
      </MenuButton>
   </children>
